<html>
<head>
<title>PR Bunnies</title>
<link rel="icon" href="/images/PR_Bunny.png" />
<link rel="stylesheet" href="http://api.ryzom.com/data/css/ryzom_ui.css" />
<link rel="stylesheet" href="/css/index.css" />
</head>
<body>
<div id="main">
<div class="ryzom-ui ryzom-ui-header">
  <div class="ryzom-ui-tl">
    <div class="ryzom-ui-tr">
      <div class="ryzom-ui-t">
        PR Bunnies
      </div>
    </div>
  </div>

  <div class="ryzom-ui-l">
    <div class="ryzom-ui-r">
      <div class="ryzom-ui-m">
        <div class="ryzom-ui-body">
          <table>
            <tbody>
              <tr>
                <td class="nav" width="200" valign="top">
                <% Object.keys(zones).forEach(z => { %>
                  <div><a href="?zone=<%= z %>"><%= zones[z] %></a></div>
                  <br/>
                <% }) %>
                </td>
                <td rowspan="2" width="150">
                  <table>
                  <tr>
                    <th><%= weather[0].ryzomTime.prettyHour() %></th>
                    <th><%= weather[0].ryzomTime.time %></th>
                  </tr>
                  <tr>
                    <th>Time</th>
                    <th>Humidity</th>
                  </tr>
                  <% weather.forEach(w => { %>
                    <tr style="<%= getWeatherColor(w.weatherClass) %>">
                      <td><%= w.ryzomTime.prettyHour() %></td>
                      <td><%= w.humidity %></td>
                    </tr>
                  <% }) %>
                  </table>
                </td>
                <td rowspan="2">
                  <% if(zone) { %>
                    <h2><%= zones[zone] %> Materials - <%= seasons[weather[0].ryzomTime.season] %></h2>
                    <table>
                      <thead>
                        <tr>
                          <th>Material</th>
                          <th>Sup</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% bands.forEach(band => { %>
                          <% band.sups.forEach(mat => { %>
                            <tr>
                              <td>
                                <img src="/images/<%= mat.type.toLowerCase().replace(' ', '_') %>.png" alt="<%= mat.type %>" width="20" height="20"/>
                                <span><%= mat.type %> - <%= mat.name %></span>
                              </td>
                              <td style="<%= getWeatherColor(band.weather.weatherClass) %>">
                                <%= band.weather.ryzomTime.prettyHour() %>
                                -
                                <%= band.endTime && band.endTime.prettyHour() %>
                              </td>
                            </tr>
                          <% }) %>
                        <% }) %>
                      </tbody>
                    </table>
                  <% } %>
                </td>
              </tr>
              <tr>
                <td>
                  <div>Weather</div>
                  <div style="<%= getWeatherColor('worst') %>">Worst (83% &uarr;)</div>
                  <div style="<%= getWeatherColor('bad') %>">Bad (50-83%)</div>
                  <div style="<%= getWeatherColor('good') %>">Good (16-50%)</div>
                  <div style="<%= getWeatherColor('best') %>">Best (16% &darr;)</div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="ryzom-ui-bl">
    <div class="ryzom-ui-br">
      <div class="ryzom-ui-b"></div>
    </div>
  </div>
</div>
</div>
</body>
</html>
